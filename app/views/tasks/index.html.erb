<h1>Tasks#index</h1>
<p>Find me in app/views/tasks/index.html.erb</p>

<%= link_to 'create new task', new_task_path  %> <br>

<% @tasks.each do |task| %>
  <%= link_to task.name, task_path(task)  %>
  <p><%= task.description %></p>
  <p>done: <%= task.done %></p>
  <%= link_to 'edit task', edit_task_path(task)  %> <br>
  <%= link_to 'delete task', delete_task_path(task), :method => "delete"  %> <br>
<% end %>


